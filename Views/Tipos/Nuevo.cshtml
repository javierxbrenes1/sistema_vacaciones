@{
    ViewData["Title"] = "Agregar Tipos de Empleados";
}

 <div class="container mt-4">
        <h2>Nuevo Tipo de Empleados</h2>
        <form asp-action="Nuevo" method="post" class="mt-4">
            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripción</label>
                <input type="text" class="form-control" id="Descripcion" name="Descripcion" required />
            </div>
            <div class="mb-3">
                <label for="NumeroDias" class="form-label">Número de Días</label>
                <input type="number" class="form-control" id="NumeroDias" name="NumeroDias" required />
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>