@model TipoEmpleados

@{
    ViewData["Title"] = "Actualizar Tipos de Empleados";
}

 <div class="container mt-4">
        <h2>Actualizar Tipo</h2>
        <form asp-action="Editar" method="post" class="mt-4">
            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripción</label>
                <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@Model.Descripcion" required />
            </div>
            <div class="mb-3">
                <label for="NumeroDias" class="form-label">Número de Días</label>
                <input type="number" class="form-control" id="NumeroDias" name="NumeroDias" value="@Model.NumeroDias" required />
            </div>
            <input id="Id" name="Id" value="@Model.Id" hidden="true" />
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>