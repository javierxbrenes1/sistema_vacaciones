@{
    ViewData["Title"] = "Departamentos";
}
<div class="text-center">
    <h1 class="display-4">Departamentos</h1>
    <div class="container mb-4 align-self-start">
        @Html.ActionLink("Agregar Departamento","Nuevo", "Departamentos", null, new { @class = "btn btn-dark" })
    </div>
    <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in @ViewBag.depts)
                {
                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.Nombre</td>
                        <td>
                            @Html.ActionLink("Editar","Editar", "Departamentos", new {id = @dept.Id}, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Eliminar","Eliminar", "Departamentos", new {id = @dept.Id}, new { @class = "btn btn-danger", @onclick="confirmarEliminacion(event, 'Seguro que deseas eliminar este Departamento?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
